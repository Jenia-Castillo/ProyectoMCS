<%- include('../Templates/headerMedico') %>
    <section class="citas-prog contenedor">
        <div class="inicio-cita">
            <h2>Citas Programadas</h2>
        </div>
        <div class="citas">
            <% let num=1; citas.forEach(citas=> {
                %>
                <div class="cita">
                    <h3>Cita <%= num %>
                    </h3>
                    <p>
                        Fecha: <span>
                            <%= moment(citas.fecha).format('DD/MM/YYYY') %>
                        </span>
                    </p>
                    <p>
                        Hora: <span>
                            <%= citas.hora %>
                        </span>
                    </p>
                    <p>
                        Paciente: <span>
                            <%= citas.id_paciente %>
                        </span>
                    </p>
                    <p>
                        Servicio: <span>
                            <%= citas.id_servicio %>
                        </span>
                    </p>
                    <div class="busqueda-paciente">

                        <a <% result.forEach(result=> { %>
                            <%=result.id_cita==citas.id_cita ? "hidden " : "" %>
                                <% }) %>
                        href="/redactar/<%= citas.id_cita %>" class="btnVerde w100">Redactar Resultado
                        </a>
                        <a href="/editar/<%= citas.id_cita %>" class="btn w100">Editar Resultado</a>
                    </div>
                </div>
                <% num++; %>
                    <% }); %>
        </div>
    </section>