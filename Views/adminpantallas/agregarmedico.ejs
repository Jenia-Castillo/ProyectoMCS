<%- include('../Templates/header') %>
  <section class="contenedor">
    <h1>Agregar Médico</h1>
    <form action="/agregarmedico" method="post">
      <div >
        
        <input type="email" class="controls" id="" placeholder="Correo" name="correo">
        <input type="password" class="controls" id="" placeholder="Contraseña" name="contrasena">
        <input type="text" class="controls" id="" placeholder="Cédula" name="cedula">
        <input type="text" class="controls" id="" placeholder="Nombre" name="nombre">
        <input type="text" class="controls" id="" placeholder="Apellido" name="apellido">
       
        <h2>Tipo de servicio</h2>
        <select class="controls" name="id_servicio" required>
           
                <% servicios.forEach(servicio => { %>           
                
            <option><%= servicio.id_servicio/*+". "+servicio.servicio*/ %> </option>
            <% });          %> 
           
        </select>

  

        <div class="centrar">
          <input type="submit" class="btn" value="Guardar">
          <a href="/medicos">
            <button type="button" class="btnRed">Cancelar</button>
          </a>
        </div>
      </div>
    </form>
  </section>

  </body>

