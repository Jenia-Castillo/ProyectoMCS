<%- include('../Templates/headerUsuario') %>
    <section class="citas-prog contenedor">
        <div class="inicio-cita">
            <h2>Tus Citas Programadas</h2>
            <a href="crearcita"><button class="btn">Nueva Cita</button></a>
        </div>
        <div class="citas">
            <% let num=1; citas.forEach(citas=> {
                %>
                <div class="cita <%=citas.estado == 'Pago' ? "verde" : "" %>">
                    <h3>Cita <%= num %>
                    </h3>
                    <p>
                        Fecha: <span>
                            <%= moment(citas.fecha).format('DD/MM/YYYY') %>
                        </span>
                    </p>
                    <p>
                        Hora: <span>
                            <%= citas.hora %>
                        </span>
                    </p>
                    <p>
                        Tipo: <span>
                            <%= citas.id_servicio %>
                        </span>
                    </p>
                    <p>
                        Precio: <span>
                            <%= citas.costo %>$
                        </span>
                    </p>
                    <p>
                        Estado de Pago:
                        <span>
                            <%= citas.estado %>
                        </span>
                    </p>
                    <div class="botones">
                        <a <%=citas.estado == 'Pago' ? "hidden " : "" %> href="/editarcita/<%= citas.id_cita %>" class="btn">Editar Cita</a>
                        <a href="/resultadocita/<%= citas.id_cita %>" class="btn">Ver Resultados</a>
                        <a <%=citas.estado == 'Pago' ? "hidden " : "" %> href="/crearorden/<%= citas.costo %>-<%= citas.id_cita %>" class="btnVerde">Pagar Cita</a>
                        <a <%=citas.estado == 'Pago' ? "hidden " : "" %> href="/eliminarCita/<%= citas.id_cita %>" class="btnRed">Cancelar Cita</a>
                    </div>
                </div>
                <% num++; %>
                    <% }); %>
        </div>
    </section>